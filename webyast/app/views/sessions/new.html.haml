#login-dialogue
  = form_for(resource, :as => resource_name, :url => account_session_path) do |f|
    %h2 Sign in
    %p
      = f.label :username
      = f.text_field :username

    %p
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me

    %p
      = f.submit _("Sign in")

  = render :partial => "devise/shared/links"
