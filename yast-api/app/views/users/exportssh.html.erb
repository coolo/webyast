<h1>Export SSH</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :homeDirectory %><br />
    <%= f.text_field :homeDirectory %>
  </p>
  <p>
    <%= f.label :loginName %><br />
    <%= f.text_field :loginName %>
  </p>
  <p>
    <%= f.label :sshkey %> <br />
    <%= f.text_field :sshkey %>
  </p>
  <p>
    <%= f.submit "Export SSH-Key" %>
  </p>
<% end %>

<%= link_to 'Show', user_path(@user.loginName) %> |
<%= link_to 'Back', users_path %>
